# BaseActions Hub - Environment Variables Reference
# Copy this file to .env.local and fill in your values

# =============================================================================
# REQUIRED - WalletConnect Project ID
# =============================================================================
# Get your project ID at https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Chain ID for the network (8453 for Base Mainnet, 84531 for Base Goerli)
NEXT_PUBLIC_CHAIN_ID=8453

# RPC URL (optional - uses public RPC if not set)
# Get a private RPC at https://www.alchemy.com/ or https://www.infura.io/
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org

# =============================================================================
# CONTRACT ADDRESSES (V2 - Base Mainnet)
# =============================================================================
NEXT_PUBLIC_GUESTBOOK_ADDRESS=0x19fE1aE089A46a1243f021447632eDF3AaF629C5
NEXT_PUBLIC_BADGE_NFT_ADDRESS=0x08E314B704e4d9101773Ef1d4CC217d09487F2bd
NEXT_PUBLIC_LEADERBOARD_ADDRESS=0xD1344d3049d04aE5D004E05F36bc91383511bD24
NEXT_PUBLIC_HUB_ADDRESS=0x45CAA41b1891AB31c1691bF015F8483FFB6fb0d8

# =============================================================================
# OPTIONAL - Analytics & Monitoring
# =============================================================================
# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# =============================================================================
# OPTIONAL - API Keys
# =============================================================================
# BaseScan API Key for contract verification
# BASESCAN_API_KEY=your_basescan_api_key

# Alchemy API Key (for enhanced RPC)
# NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_REFERRALS=true
NEXT_PUBLIC_ENABLE_TIPS=true
NEXT_PUBLIC_ENABLE_BADGES=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable debug mode (adds console logs)
# NEXT_PUBLIC_DEBUG=true

# Mock wallet for testing (never use in production)
# NEXT_PUBLIC_MOCK_WALLET=true
