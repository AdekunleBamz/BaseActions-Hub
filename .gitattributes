# Auto detect text files and perform LF normalization
* text=auto

# TypeScript/JavaScript
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# JSON
*.json text eol=lf

# CSS
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# HTML
*.html text eol=lf
*.htm text eol=lf

# Markdown
*.md text eol=lf
*.mdx text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Solidity
*.sol text eol=lf

# Config files
*.config text eol=lf
*.env text eol=lf
*.toml text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.prettierrc text eol=lf
.prettierignore text eol=lf
.eslintrc text eol=lf
.eslintrc.json text eol=lf

# Lock files - binary for consistent hashing
package-lock.json binary
yarn.lock binary
pnpm-lock.yaml binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
*.webp binary

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary

# Documents
*.pdf binary

# Archives
*.zip binary
*.tar.gz binary

# Git LFS (if using large files)
# *.psd filter=lfs diff=lfs merge=lfs -text

# Linguist overrides for GitHub language stats
*.css linguist-vendored
